<h1>Create a Need.</h1>

<% if current_user.status == "student" && current_user.id != @user.id %>
  <%= form_for (@need) do |f| %>

    <%= f.label :title %>
    <%= f.text_field :title %><br />
    <%= f.label :end_date%>
    <%= f.date_field :end_date %><br />
    <%= f.label :category %>
    <%= f.select :category, options_for_select(@need_category), {include_blank: true} %><br />
    <%= hidden_field_tag 'user_id', current_user.id %>
    <%= f.submit %>
  <% end %>
<% end %>
